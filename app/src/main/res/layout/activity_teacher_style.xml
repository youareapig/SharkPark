<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weiye.zl.TeacherStyleActivity">

    <com.weiye.myview.ObservableScrollView
        android:id="@+id/teacherStyle_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/main3">

            <RelativeLayout
                android:id="@+id/teacherStyle_top"
                android:layout_width="match_parent"
                android:layout_height="1360px">

                <android.support.v4.view.ViewPager
                    android:id="@+id/teacherStyle_banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/teacherStyle_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="60px"
                    android:gravity="center"
                    android:orientation="horizontal">

                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/teacherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80px"
                android:textColor="#303030"
                android:textSize="72px" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:background="#c9c9c9"
                android:layout_marginTop="80px"/>

            <TextView
                android:id="@+id/teacherProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="80px"
                android:textColor="#515151"
                android:lineSpacingExtra="6px"
                android:lineSpacingMultiplier="1.2"
                android:textSize="50px" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px" />
        </LinearLayout>
    </com.weiye.myview.ObservableScrollView>
    <RelativeLayout
        android:id="@+id/teacherStyle_title"
        style="@style/mytitle"
        android:layout_marginTop="70px">

        <RelativeLayout
            android:id="@+id/teacherStyle_Back"
            android:layout_width="108px"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="28px"
                android:layout_height="48px"
                android:layout_centerInParent="true"
                android:src="@mipmap/back" />
        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>
