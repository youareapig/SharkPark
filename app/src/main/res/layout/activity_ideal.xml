<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.weiye.zl.IdealActivity">

    <RelativeLayout
        style="@style/mytitle">

        <RelativeLayout
            android:id="@+id/IdealBack"
            android:layout_width="108px"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="28px"
                android:layout_height="48px"
                android:layout_centerInParent="true"
                android:src="@mipmap/back1" />
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginTop="45px"
        android:text="意见反馈"
        android:textColor="#303030"
        android:textSize="72px" />

    <EditText
        android:id="@+id/inputIdeal"
        android:layout_width="match_parent"
        android:layout_height="800px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="100px"
        android:background="@drawable/ideal"
        android:gravity="start"
        android:hint="请填写您的宝贵意见..."
        android:maxLength="500"
        android:padding="24px"
        android:textColor="#888888"
        android:textColorHint="#888888"
        android:textSize="52px" />

    <Button
        android:id="@+id/submit"
        android:layout_width="900px"
        android:layout_height="148px"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="40px"
        android:layout_marginTop="200px"
        android:background="@drawable/btn"
        android:text="保存"
        android:textColor="#fff"
        android:textSize="62px" />
</LinearLayout>
