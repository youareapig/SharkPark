<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weiye.zl.SchoolNextActivity">

    <com.weiye.myview.ObservableScrollView
        android:id="@+id/scrollview2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/titleimage"
                android:layout_width="match_parent"
                android:layout_height="660px">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/gicon" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100px"
                android:gravity="center"
                android:text="三月踏青季"
                android:textColor="#303030"
                android:textSize="72px" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="500px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="80px"
                android:background="@drawable/texttype">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60px"
                    android:text="春季游园地02期"
                    android:textColor="#303030"
                    android:textSize="62px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="120px"
                    android:padding="40px"
                    android:text="春天到了春天到了春天到了春天到了春天到了"
                    android:textColor="#888888"
                    android:textSize="52px" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="500px"
                android:layout_marginTop="60px"
                android:src="@mipmap/bg1"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </com.weiye.myview.ObservableScrollView>

    <RelativeLayout
        android:id="@+id/title1"
        android:layout_width="match_parent"
        android:layout_height="200px">

        <RelativeLayout
            android:id="@+id/back1"
            android:layout_width="108px"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="28px"
                android:layout_height="48px"
                android:layout_centerInParent="true"
                android:src="@mipmap/back" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/share1"
            android:layout_width="128px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="54px"
                android:layout_height="58px"
                android:layout_centerInParent="true"
                android:src="@mipmap/share" />
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
