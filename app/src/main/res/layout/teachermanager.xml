<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weiye.zl.SubjectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/mytitle"
                android:layout_width="match_parent"
                android:layout_height="660px">

                <ImageView
                    android:id="@+id/teachermanagerBg"
                    android:layout_width="match_parent"
                    android:layout_height="660px"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/teachermanagerContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#10000000"
                    android:lineSpacingExtra="6px"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingLeft="40px"
                    android:paddingRight="40px"
                    android:paddingTop="250px"
                    android:shadowColor="#222222"
                    android:shadowDx="0.8"
                    android:shadowDy="0.8"
                    android:shadowRadius="1"
                    android:textColor="#fff"
                    android:textSize="44px" />
            </FrameLayout>


            <android.support.design.widget.TabLayout
                android:id="@+id/teachermanagerTab"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:background="#eeeeee"
                app:tabGravity="fill"
                app:tabIndicatorColor="#eeeeee"
                app:tabIndicatorHeight="4px"
                app:tabMaxWidth="0px"
                app:tabMode="fixed"
                app:tabSelectedTextColor="#000"
                app:tabTextAppearance="@style/tab" />


            <com.weiye.myview.NoScrollViewPager
                android:id="@+id/teachermanagerPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="40px" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/title_subject"
        style="@style/mytitle">

        <RelativeLayout
            android:id="@+id/teachermanagerDom"
            android:layout_width="480px"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/teachermanagerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textColor="#fff"
                android:textSize="64px" />

            <ImageView
                android:id="@+id/teachermanagerJt"
                android:layout_width="30px"
                android:layout_height="18px"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="35px"
                android:layout_marginLeft="25px"
                android:layout_toRightOf="@+id/teachermanagerTitle"
                android:src="@mipmap/dwon" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/back7"
            android:layout_width="108px"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="28px"
                android:layout_height="48px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="40px"
                android:src="@mipmap/back" />
        </RelativeLayout>


    </RelativeLayout>

</FrameLayout>
