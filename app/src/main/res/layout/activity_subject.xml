<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weiye.zl.SubjectActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.weiye.myview.ObservableScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/mytitle"
                    android:layout_width="match_parent"
                    android:layout_height="660px">

                    <ImageView
                        android:id="@+id/subjecttitlebackground"
                        android:layout_width="match_parent"
                        android:layout_height="660px"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/subject_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#10000000"
                        android:lineSpacingExtra="6px"
                        android:lineSpacingMultiplier="1.2"
                        android:paddingLeft="40px"
                        android:paddingRight="40px"
                        android:paddingTop="250px"
                        android:shadowColor="#222222"
                        android:shadowDx="0.8"
                        android:shadowDy="0.8"
                        android:shadowRadius="1"
                        android:textColor="#fff"
                        android:textSize="44px" />
                </FrameLayout>

                <com.androidkun.xtablayout.XTabLayout
                    android:id="@+id/xTab"
                    android:layout_width="match_parent"
                    android:layout_height="200px"
                    android:background="#eeeeee"
                    app:xTabDisplayNum="2"
                    app:xTabDividerWidthWidthText="true"
                    app:xTabIndicatorWidth="90px"
                    app:xTabMode="scrollable"
                    app:xTabSelectedTextColor="#181818"
                    app:xTabTextColor="#888888"
                    app:xTabTextSize="64px" />

                <com.weiye.myview.CustomViewPager
                    android:id="@+id/xViewpage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="40px" />

            </LinearLayout>
        </com.weiye.myview.ObservableScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/title_subject"
        android:layout_width="match_parent"
        android:layout_height="160px">

        <TextView
            android:id="@+id/mytitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="人文科学"
            android:textColor="#fff"
            android:textSize="64px" />

        <RelativeLayout
            android:id="@+id/back6"
            android:layout_width="108px"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="28px"
                android:layout_height="48px"
                android:layout_centerInParent="true"
                android:src="@mipmap/back" />
        </RelativeLayout>


    </RelativeLayout>
</FrameLayout>
