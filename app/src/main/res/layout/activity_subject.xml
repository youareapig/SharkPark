<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.weiye.zl.SubjectActivity">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="660px"
                android:background="@mipmap/subjectbg">

                <RelativeLayout
                    android:id="@+id/title_subject"
                    android:layout_width="match_parent"
                    android:layout_height="160px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="生命科学"
                        android:textColor="#fff"
                        android:textSize="64px" />

                    <RelativeLayout
                        android:layout_width="108px"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="28px"
                            android:layout_height="48px"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/back" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="128px"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true">

                        <ImageView
                            android:layout_width="48px"
                            android:layout_height="48px"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/classfiy" />
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_subject"
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="40px"
                    android:layout_marginTop="60px"
                    android:text="生命监考老师的飞机了的开发工具打fffff开了几十个打开了放假啊了解地方了就卡了放假"
                    android:textColor="#fff"
                    android:textSize="44px" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="490px"
                android:background="#8989">

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:background="#cecccc"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/videoText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="视频集"
                    android:textColor="#181818"
                    android:textSize="64px" />

                <TextView
                    android:layout_width="1px"
                    android:layout_height="86px"
                    android:background="#ff00"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/photoText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="相册集"
                    android:textColor="#888888"
                    android:textSize="64px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/subfragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="40px"
                android:orientation="vertical">

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="178px">

        <ImageView
            android:layout_width="836px"
            android:layout_height="178px"
            android:layout_centerInParent="true"
            android:src="@mipmap/btnorder" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="预约试听"
            android:textColor="#fff"
            android:textSize="62px" />

    </RelativeLayout>
</LinearLayout>
