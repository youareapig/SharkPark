<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weiye.zl.SubjectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.weiye.myview.ObservableScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/mytitle"
                    android:layout_width="match_parent"
                    android:layout_height="660px">

                    <ImageView
                        android:id="@+id/subjecttitlebackground"
                        android:layout_width="match_parent"
                        android:layout_height="660px"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/subject_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#10000000"
                        android:lineSpacingExtra="6px"
                        android:lineSpacingMultiplier="1.2"
                        android:paddingLeft="40px"
                        android:paddingRight="40px"
                        android:paddingTop="250px"
                        android:textColor="#fff"
                        android:textSize="44px" />
                </FrameLayout>


                <LinearLayout
                    android:id="@+id/tablayout"
                    android:layout_width="match_parent"
                    android:layout_height="200px"
                    android:background="#eeeeee"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/videoText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="视频集"
                        android:textColor="#181818"
                        android:textSize="64px" />

                    <TextView
                        android:layout_width="1px"
                        android:layout_height="86px"
                        android:background="#cecccc"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/photoText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="相册集"
                        android:textColor="#888888"
                        android:textSize="64px" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/subfragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="40px"
                    android:orientation="vertical" />

            </LinearLayout>
        </com.weiye.myview.ObservableScrollView>
    </LinearLayout>




    <RelativeLayout
        android:id="@+id/title_subject"
        style="@style/mytitle">

        <TextView
            android:id="@+id/mytitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textSize="64px"
            android:text="人文科学" />
        <ImageView
            android:id="@+id/jiantou"
            android:layout_width="30px"
            android:layout_height="18px"
            android:src="@mipmap/dwon"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/mytitleText"
            android:layout_marginLeft="20px"/>

        <RelativeLayout
            android:id="@+id/back6"
            android:layout_width="108px"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="28px"
                android:layout_height="48px"
                android:layout_centerInParent="true"
                android:src="@mipmap/back" />
        </RelativeLayout>


    </RelativeLayout>

</FrameLayout>
