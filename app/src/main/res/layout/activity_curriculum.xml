<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.weiye.zl.CurriculumActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        style="@style/mytitle"
        >

        <RelativeLayout
            android:id="@+id/back5"
            android:layout_width="108px"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="28px"
                android:layout_height="48px"
                android:layout_centerInParent="true"
                android:src="@mipmap/back1" />
        </RelativeLayout>

    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="160px"
    android:layout_marginTop="45px">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginTop="45px"
        android:text="四月第三周课程表"
        android:layout_centerVertical="true"
        android:textColor="#303030"
        android:textSize="72px" />
    <ImageView
        android:id="@+id/CurriculumtitleImage"
        android:layout_width="146px"
        android:layout_height="146px"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40px"/>
</RelativeLayout>


    <com.weiye.myview.ObservableScrollView
        android:id="@+id/curricuScrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/curricuGalleryView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <Gallery
                android:id="@+id/curricuGallery"
                android:layout_width="match_parent"
                android:layout_height="390px"
                android:layout_marginTop="100px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#10405157" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="2px"
                android:background="#10405157" />

            <com.weiye.myview.MyListView
                android:id="@+id/curricuListview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:divider="#10405157"
                android:dividerHeight="10px" />
        </LinearLayout>
    </com.weiye.myview.ObservableScrollView>

</LinearLayout>
    <Button
        android:id="@+id/curricuButton"
        android:layout_width="900px"
        android:layout_height="148px"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="40px"
        android:background="@drawable/btn"
        android:text="预约试听"
        android:textColor="#fff"
        android:textSize="62px" />
</FrameLayout>
