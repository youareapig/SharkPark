<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="588px"
        android:background="@mipmap/background">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="230px"
            android:layout_height="230px"
            android:layout_centerInParent="true"
            android:src="@mipmap/head2" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/myhead"
            android:layout_width="219px"
            android:layout_height="219px"
            android:layout_centerInParent="true"
            android:src="@mipmap/head1" />

        <ImageView
            android:id="@+id/vipimage"
            android:layout_width="68px"
            android:layout_height="68px"
            android:layout_marginLeft="610px"
            android:layout_marginTop="300px"
            android:src="@mipmap/viptag" />

        <TextView
            android:id="@+id/myname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myhead"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21px"
            android:textColor="#ffffff"
            android:textSize="48px" />

        <TextView
            android:id="@+id/makeInfomation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="39px"
            android:layout_marginRight="39px"
            android:text="编辑资料"
            android:textColor="#fff"
            android:textSize="42px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/myCourse"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:layout_marginTop="6px">

        <ImageView
            android:id="@+id/myclassImg"
            android:layout_width="46px"
            android:layout_height="58px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="39px"
            android:src="@mipmap/myclass" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/myclassImg"
            android:text="我的课程"
            android:textColor="#303030"
            android:textSize="51px" />

        <ImageView
            android:layout_width="18px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="39px"
            android:src="@mipmap/right" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f0f0f0" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/myClass"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:layout_marginTop="6px">

        <ImageView
            android:id="@+id/myclassImg1"
            android:layout_width="58px"
            android:layout_height="58px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="39px"
            android:src="@mipmap/wodebanji" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/myclassImg1"
            android:text="我的班级"
            android:textColor="#303030"
            android:textSize="51px" />

        <ImageView
            android:layout_width="18px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="39px"
            android:src="@mipmap/right" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f0f0f0" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:layout_marginTop="6px">

        <ImageView
            android:id="@+id/talkImg"
            android:layout_width="58px"
            android:layout_height="55px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="39px"
            android:src="@mipmap/talk" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/talkImg"
            android:text="在线咨询"
            android:textColor="#303030"
            android:textSize="51px" />

        <ImageView
            android:layout_width="18px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="39px"
            android:src="@mipmap/right" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f0f0f0" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/managecourse"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:layout_marginTop="6px">

        <ImageView
            android:id="@+id/managecourseImg"
            android:layout_width="62px"
            android:layout_height="62px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="39px"
            android:src="@mipmap/manage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/managecourseImg"
            android:text="我的管理"
            android:textColor="#303030"
            android:textSize="51px" />

        <ImageView
            android:layout_width="18px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="39px"
            android:src="@mipmap/right" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f0f0f0" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:layout_marginTop="6px">

        <ImageView
            android:id="@+id/settingImg"
            android:layout_width="50px"
            android:layout_height="58px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="39px"
            android:src="@mipmap/setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/settingImg"
            android:text="设置"
            android:textColor="#303030"
            android:textSize="51px" />

        <ImageView
            android:layout_width="18px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="39px"
            android:src="@mipmap/right" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f0f0f0" />
</com.zhy.autolayout.AutoLinearLayout>
