<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="588px"
        android:background="@mipmap/background">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/myhead"
            android:layout_width="219px"
            android:layout_height="219px"
            android:layout_centerInParent="true"
            android:src="@mipmap/head1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myhead"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21px"
            android:text="登陆"
            android:textColor="#ffffff"
            android:textSize="48px" />

        <TextView
            android:id="@+id/makeInfomation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="39px"
            android:layout_marginRight="39px"
            android:text="编辑资料"
            android:textColor="#fff"
            android:textSize="42px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/myCourse"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:layout_marginTop="6px">

        <ImageView
            android:id="@+id/myclassImg"
            android:layout_width="48px"
            android:layout_height="57px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="39px"
            android:src="@mipmap/setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/myclassImg"
            android:text="我的课程"
            android:textColor="#303030"
            android:textSize="51px" />

        <ImageView
            android:layout_width="18px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="39px"
            android:src="@mipmap/right" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d2d2d2" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:layout_marginTop="6px">

        <ImageView
            android:id="@+id/talkImg"
            android:layout_width="48px"
            android:layout_height="57px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="39px"
            android:src="@mipmap/talk" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/talkImg"
            android:text="在线咨询"
            android:textColor="#303030"
            android:textSize="51px" />

        <ImageView
            android:layout_width="18px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="39px"
            android:src="@mipmap/right" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d2d2d2" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:layout_marginTop="6px">

        <ImageView
            android:id="@+id/settingImg"
            android:layout_width="48px"
            android:layout_height="57px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="39px"
            android:src="@mipmap/setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/settingImg"
            android:text="设置"
            android:textColor="#303030"
            android:textSize="51px" />

        <ImageView
            android:layout_width="18px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="39px"
            android:src="@mipmap/right" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d2d2d2" />
</com.zhy.autolayout.AutoLinearLayout>
