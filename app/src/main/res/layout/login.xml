<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="40px"
    android:layout_marginRight="40px"
    android:background="@drawable/logindialog">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <ImageView
            android:id="@+id/exit"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40px"
            android:layout_marginTop="40px"
            android:src="@mipmap/exit" />

        <TextView
            android:id="@+id/longinTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100px"
            android:text="登录"
            android:textColor="#303030"
            android:textSize="62px" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/loginlayout"
            android:layout_width="800px"
            android:layout_height="100px"
            android:layout_below="@+id/longinTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60px">

            <EditText
                android:id="@+id/loginTel"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_alignParentBottom="true"
                android:background="@null"
                android:drawableBottom="@drawable/line"
                android:hint="手机"
                android:inputType="number"
                android:maxLength="11"
                android:singleLine="true"
                android:textColor="#888888"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="48px" />

            <TextView
                android:id="@+id/vercode"
                android:layout_width="240px"
                android:layout_height="80px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="20px"
                android:background="@drawable/vercode1"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="#fff"
                android:textSize="38px"
                android:visibility="gone" />
        </com.zhy.autolayout.AutoRelativeLayout>


        <EditText
            android:id="@+id/loginPassword"
            android:layout_width="800px"
            android:layout_height="100px"
            android:layout_below="@+id/loginlayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60px"
            android:background="@null"
            android:drawableBottom="@drawable/line"
            android:hint="密码"
            android:inputType="textPassword"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="#888888"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="48px" />

        <TextView
            android:id="@+id/forgetpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/loginPassword"
            android:layout_below="@id/loginPassword"
            android:layout_marginTop="40px"
            android:text="忘记密码"
            android:textColor="#888888"
            android:textSize="48px" />

        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:layout_below="@+id/forgetpassword"
            android:layout_marginTop="40px"
            android:background="@color/gray"
            android:enabled="false"
            android:gravity="center"
            android:text="登录/注册"
            android:textColor="#fff"
            android:textSize="58px" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>
