<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.weiye.zl.ScienceStationActivity">

    <com.weiye.myview.MyScrollView
        android:id="@+id/scienceStation_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/scienceStationImg"
                android:layout_width="match_parent"
                android:layout_height="660px">

                <ImageView
                    android:id="@+id/scienceStation_BJ"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px">

                <TextView
                    android:id="@+id/scienceStation_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:textColor="#303030"
                    android:textSize="64px" />

                <TextView
                    android:id="@+id/scienceStation_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/scienceStation_title"
                    android:layout_alignParentRight="true"
                    android:textColor="#888888"
                    android:textSize="42px" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="20px"
                android:background="#f0f0f0" />


            <WebView
                android:id="@+id/scienceStation_Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="30px" />
        </LinearLayout>
    </com.weiye.myview.MyScrollView>

    <ImageView
        android:id="@+id/back"
        android:layout_width="162px"
        android:layout_height="162px"
        android:layout_marginLeft="40px"
        android:layout_marginTop="40px"
        android:src="@mipmap/back01" />
</FrameLayout>
