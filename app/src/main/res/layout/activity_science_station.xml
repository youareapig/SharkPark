<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weiye.zl.ScienceStationActivity">

    <com.weiye.myview.ObservableScrollView
        android:id="@+id/scienceStation_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/scienceStationImg"
                android:layout_width="match_parent"
                android:layout_height="660px">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/gicon" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="260px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px">

                <TextView
                    android:id="@+id/scienceStation_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="天上到底有什么？"
                    android:textColor="#303030"
                    android:textSize="72px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/scienceStation_title"
                    android:layout_alignParentRight="true"
                    android:text="2017-4-18 13:50"
                    android:textColor="#888888"
                    android:textSize="42px" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:text="天上到底有什么呢？天上到底有什么呢？天上到底有什么呢？天上到底有什么呢？天上到底有什么呢？天上到底有什么呢？天上到底有什么呢？天上到底有什么呢？天上到底有什么呢？"
                android:textColor="#515151"
                android:textSize="48px" />
        </LinearLayout>
    </com.weiye.myview.ObservableScrollView>

    <RelativeLayout
        android:id="@+id/scienceStationTitle"
        style="@style/mytitle">

        <RelativeLayout
            android:id="@+id/scienceStationBack"
            android:layout_width="108px"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="28px"
                android:layout_height="48px"
                android:layout_centerInParent="true"
                android:src="@mipmap/back" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/scienceStationShare"
            android:layout_width="128px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="54px"
                android:layout_height="58px"
                android:layout_centerInParent="true"
                android:src="@mipmap/share" />
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
