<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.weiye.zl.FourSchoolActivity">
    <RelativeLayout
        android:layout_marginTop="60px"
        android:layout_width="match_parent"
        android:layout_height="200px">

        <RelativeLayout
            android:id="@+id/fourschoolBack"
            android:layout_width="108px"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="28px"
                android:layout_height="48px"
                android:layout_centerInParent="true"
                android:src="@mipmap/back1" />
        </RelativeLayout>

    </RelativeLayout>
    <ScrollView
        android:id="@+id/schoolScrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_marginTop="45px"
                android:layout_width="match_parent"
                android:layout_height="200px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:text="课堂风采，四大学院"
                    android:textColor="#181818"
                    android:layout_centerVertical="true"
                    android:textSize="72px" />
                <ImageView
                    android:id="@+id/screening"
                    android:layout_width="70px"
                    android:layout_height="66px"
                    android:src="@mipmap/screen"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40px"/>
            </RelativeLayout>

            <Gallery
                android:id="@+id/fourschoolGallery"
                android:layout_marginTop="60px"
                android:layout_width="match_parent"
                android:layout_height="550px"/>
            <LinearLayout
                android:layout_marginTop="100px"
                android:id="@+id/vandpTitle"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:background="#eeeeee"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/videoText1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="视频集"
                    android:textColor="#181818"
                    android:textSize="64px" />

                <TextView
                    android:layout_width="1px"
                    android:layout_height="86px"
                    android:background="#cecccc"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/photoText1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="相册集"
                    android:textColor="#888888"
                    android:textSize="64px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/schoolfragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="40px"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
