<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.weiye.zl.FourSchoolActivity">

    <RelativeLayout style="@style/mytitle">

        <RelativeLayout
            android:id="@+id/fourschoolBack"
            android:layout_width="108px"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="28px"
                android:layout_height="48px"
                android:layout_centerInParent="true"
                android:src="@mipmap/back1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/backtop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/fourschoolBack" />

    </RelativeLayout>

    <com.weiye.myview.MyScrollView
        android:id="@+id/schoolScrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45px"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:text="校园风采"
                android:textColor="#181818"
                android:textSize="72px" />

            <Gallery
                android:id="@+id/fourschoolGallery"
                android:layout_width="match_parent"
                android:layout_height="550px"
                android:layout_marginTop="60px" />

            <com.androidkun.xtablayout.XTabLayout
                android:id="@+id/xTab"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:layout_marginTop="100px"
                android:background="#eeeeee"
                app:xTabDisplayNum="2"
                app:xTabDividerWidthWidthText="true"
                app:xTabIndicatorWidth="90px"
                app:xTabMode="scrollable"
                app:xTabSelectedTextColor="#181818"
                app:xTabTextColor="#888888"
                app:xTabTextSize="64px" />

            <com.weiye.myview.CustomViewPager
                android:id="@+id/xViewpage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="40px" />
        </LinearLayout>
    </com.weiye.myview.MyScrollView>

</LinearLayout>
