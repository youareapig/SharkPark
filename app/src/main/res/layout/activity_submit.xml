<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.weiye.zl.SubmitActivity">

    <RelativeLayout style="@style/mytitle">

        <RelativeLayout
            android:id="@+id/submitBack"
            android:layout_width="108px"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="28px"
                android:layout_height="48px"
                android:layout_centerInParent="true"
                android:src="@mipmap/back1" />
        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="45px"
                android:text="预约信息"
                android:textColor="#303030"
                android:textSize="72px" />

            <RelativeLayout
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:layout_marginTop="20px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40px"
                    android:text="预约课程"
                    android:textColor="#303030"
                    android:textSize="52px" />

            </RelativeLayout>

            <com.weiye.myview.MyListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:background="#eeeeee" />

            <RelativeLayout
                android:id="@+id/name1"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:layout_marginTop="20px">

                <TextView
                    android:id="@+id/nc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40px"
                    android:text="昵称"
                    android:textColor="#303030"
                    android:textSize="52px" />

                <EditText
                    android:id="@+id/nameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="40px"
                    android:layout_toRightOf="@+id/nc1"
                    android:background="@null"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="小鲨鱼"
                    android:textColor="#888888"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="48px" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d2d2d2" />

            <RelativeLayout
                android:id="@+id/sex"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:layout_marginTop="20px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40px"
                    android:text="宝贝性别"
                    android:textColor="#303030"
                    android:textSize="52px" />

                <ImageView
                    android:id="@+id/go"
                    android:layout_width="18px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40px"
                    android:src="@mipmap/right" />

                <TextView
                    android:id="@+id/sexText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:layout_toLeftOf="@+id/go"
                    android:text="男"
                    android:textColor="#888888"
                    android:textSize="48px" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d2d2d2" />

            <RelativeLayout
                android:id="@+id/sex1"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:layout_marginTop="20px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40px"
                    android:text="宝贝年龄"
                    android:textColor="#303030"
                    android:textSize="52px" />

                <ImageView
                    android:id="@+id/go1"
                    android:layout_width="18px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40px"
                    android:src="@mipmap/right" />

                <TextView
                    android:id="@+id/sexText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:layout_toLeftOf="@+id/go1"
                    android:text="2岁"
                    android:textColor="#888888"
                    android:textSize="48px" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d2d2d2" />

            <RelativeLayout
                android:id="@+id/sex2"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:layout_marginTop="20px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40px"
                    android:text="家长类别"
                    android:textColor="#303030"
                    android:textSize="52px" />

                <ImageView
                    android:id="@+id/go2"
                    android:layout_width="18px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40px"
                    android:src="@mipmap/right" />

                <TextView
                    android:id="@+id/sexText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:layout_toLeftOf="@+id/go2"
                    android:text="父亲"
                    android:textColor="#888888"
                    android:textSize="48px" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d2d2d2" />

            <RelativeLayout
                android:id="@+id/name2"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:layout_marginTop="20px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40px"
                    android:text="家长电话"
                    android:textColor="#303030"
                    android:textSize="52px" />

                <EditText
                    android:id="@+id/nameText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40px"
                    android:background="@null"
                    android:singleLine="true"
                    android:text="15983302246"
                    android:textColor="#888888"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="48px" />
            </RelativeLayout>

            <Button
                android:id="@+id/save"
                android:layout_width="900px"
                android:layout_height="148px"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="40px"
                android:layout_marginTop="100px"
                android:background="@drawable/btn"
                android:text="提交"
                android:textColor="#fff"
                android:textSize="62px" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
